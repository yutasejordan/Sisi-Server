<div class="p-10">
  <h2 class="font-semibold text-3xl">Daftar Data Mahasiswa</h2>
  <% if (msg.length !== 0) { %>
  <div class="w-96 p-4 bg-green-500 shadow-xl rounded-lg mt-8">
    <h1><%= msg %></h1>
  </div>
  <% } %> <% if (mahasiswa.length == 0) { %>
  <div class="w-96 p-4 bg-red-500 shadow-xl rounded-lg mt-8">
    <h1>Data Mahasiswa Masih Kosong!</h1>
  </div>
  <% } else {%>
  <table class="w-full text-center mt-5">
    <thead>
      <tr class="border-b-2 border-slate-500">
        <th class="py-4">#</th>
        <th>Nama</th>
        <th>NIM</th>
        <th>Aksi</th>
      </tr>
    </thead>
    <tbody>
      <% mahasiswa.forEach((mhs, i) => { %>
      <tr class="odd:bg-slate-100 even:bg-white border-b-2 border-slate-200">
        <td class="py-4"><%= i + 1 %></td>
        <td><%= mhs.nama %></td>
        <td><%= mhs.nim %></td>
        <td>
          <a
            href="/<%= mhs.nim %>"
            class="bg-blue-400 p-2 rounded-full hover:bg-blue-500 transition-all font-medium"
            ><i class="ri-information-line mr-1.5"></i>detail</a
          >
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
  <% } %>
</div>
