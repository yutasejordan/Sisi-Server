<div class="p-10">
  <h1 class="font-semibold text-3xl mb-4">Tambah Data Mahasiswa</h1>
  <% if (typeof errors != "undefined") { %>
  <ul class="bg-red-500 w-max py-2 px-3 rounded-lg">
    <% errors.forEach(error => { %>
    <li><%= error.msg %></li>
    <% }) %>
  </ul>
  <% } %>
  <form action="/add" method="post" class="flex flex-col">
    <label for="nama" class="mb-2">Nama</label>
    <input
      type="text"
      class="p-1.5 border-2 border-slate-500 rounded-lg w-max"
      id="nama"
      name="nama"
      placeholder="masukkan nama..."
      required
    />
    <label for="nim" class="my-2">NIM</label>
    <input
      type="text"
      class="p-1.5 border-2 border-slate-500 rounded-lg w-max"
      id="nim"
      name="nim"
      placeholder="masukkan nim..."
      required
    />
    <label for="ipk" class="my-2">IPK</label>
    <input
      type="text"
      class="p-1.5 border-2 border-slate-500 rounded-lg w-max"
      id="ipk"
      name="ipk"
      placeholder="masukkan ipk..."
      required
    />
    <button
      class="py-1.5 px-3 bg-green-500 hover:bg-green-600 transition-all w-max mt-4 rounded-lg font-medium text-white"
    >
      Tambah Data
    </button>
  </form>
</div>
